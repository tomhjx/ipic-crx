{
    "name": "My Pictures",
    "description": "A browser action with pictures.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
      },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],
    "action": {
      "default_title": "My Pictures",
      "default_icon": "icon.png"
    },
    "permissions": [
        "contextMenus",
        "clipboardRead",
        "clipboardWrite"
      ]
  }