{
    "name": "Pictures Hunter",
    "description": "A tool for collecting pictures.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
      },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_title": "Pictures Hunter",
      "default_icon": "icon.png"
    },
    "permissions": [
        "contextMenus",
        "storage"
      ],
    "options_page":"options.html"
  }